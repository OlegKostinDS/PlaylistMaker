<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_main_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/main_start_padding"
    android:paddingEnd="@dimen/main_end_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_title_top_margin"
        android:layout_marginBottom="40dp"
        android:gravity="top"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_size" />

    <Button
        android:id="@+id/search_btn"
        style="@style/MainActivityButtonStyle"
        android:text="@string/main_search_button_text"
        app:icon="@drawable/search_button_icon" />

    <Button
        android:id="@+id/music_btn"
        style="@style/MainActivityButtonStyle"
        android:text="@string/main_music"
        app:icon="@drawable/settings_music_icon" />

    <Button
        android:id="@+id/setting_btn"
        style="@style/MainActivityButtonStyle"
        android:text="@string/main_settings"
        app:icon="@drawable/setting_settings_icon" />
</LinearLayout>