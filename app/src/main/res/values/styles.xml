<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/main_btn_radius</item>
        <item name="icon">@drawable/search_button_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/settings_icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsActivityFrameLayoutPaddingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_margin_start_framelayouts</item>
        <item name="android:paddingTop">@dimen/settings_paddings_frameslayouts</item>
        <item name="android:paddingEnd">@dimen/settings_paddings_frameslayouts</item>
        <item name="android:paddingBottom">@dimen/settings_paddings_frameslayouts</item>
    </style>

    <style name="SettingsActivityTextViewTextAndLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/settings_tw_margin_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_tw_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsActivityImageViewGravity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SettingsDayNightStyle">
        <item name="android:textColor">@color/settings_settings_textview</item>
        <item name="navigationIcon">@drawable/arrow_back_btn</item>
    </style>
    <style name="SearchDayNightStyle">
        <item name="android:textColor">@color/settings_settings_textview</item>
        <item name="navigationIcon">@drawable/arrow_back_btn</item>
    </style>
</resources>