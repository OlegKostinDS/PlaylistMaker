<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/main_btn_radius</item>
        <item name="icon">@drawable/search_button_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/settings_icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsActivityFrameLayoutPaddingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:paddingStart">@dimen/settings_margin_start_framelayouts</item>
        <item name="android:paddingTop">@dimen/settings_paddings_frameslayouts</item>
        <item name="android:paddingEnd">@dimen/settings_paddings_frameslayouts</item>
        <item name="android:paddingBottom">@dimen/settings_paddings_frameslayouts</item>
    </style>

    <style name="SearchActivityFrameLayoutPaddingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_margin_start_framelayouts</item>
        <item name="android:paddingTop">@dimen/settings_paddings_frameslayouts</item>
        <item name="android:paddingEnd">@dimen/settings_paddings_frameslayouts</item>
        <item name="android:paddingBottom">@dimen/settings_paddings_frameslayouts</item>
    </style>
    <style name="SettingsActivityTextViewTextAndLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/settings_tw_margin_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_tw_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsActivityImageViewGravity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SettingsDayNightStyle">
        <item name="android:textColor">@color/settings_settings_textview</item>

    </style>

    <style name="FontBottomNav" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchDayNightStyle">
        <item name="android:textColor">@color/settings_settings_textview</item>

    </style>

    <style name="InputEditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">@color/settings_settings_textview</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/add_fragment_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/add_fragment_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/add_fragment_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/add_fragment_corner_radius</item>
    </style>

    <style name="SearchLibraryActivityTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/search_day_night_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchButtons">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/search_day_night_color</item>
    </style>

    <style name="MpTexts">
        <item name="android:textColor">@color/mp_text_color_lesser</item>
        <item name="android:textSize">@dimen/mp_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TabLayoutLibrary" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tab_layout_text_size</item>

    </style>

    <style name="DetailedPlaylistLesserText">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/dp_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="DetailedBottomSheetTextViewTextStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_21dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_21dp</item>

        <item name="android:textColor">@color/yp_gray_night</item>
        <item name="android:textSize">@dimen/settings_tw_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>